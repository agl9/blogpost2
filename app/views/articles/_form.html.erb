<%= form_with(model: @article, local: true, html: {multipart: true}) do |f|%>

  <ul>
    <% @article.errors.full_messages.each do |error| %>
        <li> <%= error %> </li>
    <% end %>
  </ul>

  <p> 
      <%= f.label :title %><br>
      <%= f.text_field :title%> 
  </p>

  <p> 
      <%= f.label :body %> <br>
      <%= f.text_area :body%>
  </p>

  <p>
    <%= f.label :tag_list%>
    <%= f.text_field :tag_list%>
  </p>

  <p> 
      <%= f.submit %> 
  </p>
<% end %>

