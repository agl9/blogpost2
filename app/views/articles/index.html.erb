<h1> Blog about travel Destinations </h1>

<ul id = "articles">
  <% @articles.each do |place|%>
    <li> 
      <%author = Author.find(place.author_id)%>
      <%= link_to place.title, article_path(place) %> (<%= author.username %>)
    </li>
  <% end %>
</ul>

<%if logged_in? %>
  <div>
    <%= link_to 'Create new post', new_article_path, class: "new_article" %> 
  </div> 
<%end%>
